<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

     android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:id="@+id/iv_main_cv"
                android:scaleType="fitXY"
                android:src="@drawable/movie_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="1"
                android:text="title"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tv_moviename_main_cv"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/iv_main_cv"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/tv_moviename_main_cv"

                android:background="@color/colorPrimary"
                android:layout_alignLeft="@+id/tv_year_mainactivity"
                android:layout_alignStart="@+id/tv_year_mainactivity"
                android:id="@+id/view" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_year_mainactivity"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"

                android:drawableLeft="@drawable/timetable"
                android:maxLength="4"

                android:layout_below="@+id/tv_moviename_main_cv"
                android:layout_toRightOf="@+id/iv_main_cv"
                android:layout_toEndOf="@+id/iv_main_cv"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="13dp" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/rb_mainactiviry"
                style="@style/RatingBarfeed"
                android:isIndicator="true"
                android:numStars="5"
                android:scaleY=".6"
                android:scaleX=".5"
                android:layout_marginLeft="45dp"
                android:layout_alignBottom="@+id/iv_main_cv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_rate_review_black_24dp"

                android:id="@+id/tv_imdbRating_mainactivity"
                android:maxLength="3"
                android:textStyle="bold"
                android:textSize="20sp"

                android:layout_above="@+id/rb_mainactiviry"
                android:layout_alignLeft="@+id/tv_year_mainactivity"
                android:layout_alignStart="@+id/tv_year_mainactivity" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>